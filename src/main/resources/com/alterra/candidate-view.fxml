<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox alignment="CENTER" prefHeight="692.0" prefWidth="1080.0" spacing="10.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alterra.SurveyorController">
   <children>
      <VBox prefHeight="611.0" prefWidth="535.0" spacing="3.0" style="-fx-background-color: white; -fx-background-radius: 0 20 20 20;">
         <children>
            <Label prefHeight="27.0" prefWidth="149.0" text="Kandidat">
               <font>
                  <Font name="Nunito Black" size="18.0" />
               </font>
            </Label>
            <Label layoutX="30.0" layoutY="168.0" text="Waktu Mulai">
               <font>
                  <Font name="Nunito Bold" size="14.0" />
               </font>
            </Label>
               <HBox spacing="5.0">
                  <Spinner fx:id="hourSpinner" max="23" min="0" />
                  <Label text=":">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
                  <Spinner fx:id="minuteSpinner" max="59" min="0" />
               </HBox>
            <Label layoutX="30.0" layoutY="60.0" text="Waktu Selesai">
               <font>
                  <Font name="Nunito Bold" size="14.0" />
               </font>
            </Label>
            <HBox layoutX="30.0" layoutY="84.0" spacing="5.0">
               <children>
                  <Spinner fx:id="hourSpinner1" max="23" min="0" />
                  <Label text=":">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="minuteSpinner1" max="59" min="0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" style="-fx-background-radius: 200; -fx-background-color: #FF7323;" text="Buat Pemilihan">
                     <font>
                        <Font name="Nunito Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox prefHeight="611.0" prefWidth="447.0" styleClass="card">
         <children>
            <Label prefHeight="27.0" prefWidth="119.0" text="Cek Akun">
               <font>
                  <Font name="Nunito SemiBold" size="18.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" prefHeight="34.0" prefWidth="295.0" text="Cari">
               <graphic>
                  <TextField prefHeight="25.0" prefWidth="251.0" />
               </graphic>
            </Button>
            <TableView fx:id="tbUser" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colEmail" prefWidth="75.0" text="Email" />
                <TableColumn fx:id="colNama" prefWidth="75.0" text="Username" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TableView>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" text="Edit" />
                  <Button mnemonicParsing="false" text="Hapus" />
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
